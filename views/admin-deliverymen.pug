    body 
        header 
            a(href="/admin-app/")
                img(src="../public/images/logo_pizzeria.jpeg")
            div 
                h1 Administration de la pizzeria "Pizza Master"
                ul 
                    include header-menu.pug 
                                    
        main
            section 
                article 
                    div
                        h2 Livreurs disponibles
                        a(href="/createdeliveryman" id="new") Ajouter un livreur
                    table(id="table")
                        tr
                        th ID
                        th Pr√©nom
                        th Nom 
                        th Actions 
                        each dman in dMen 
                            tr
                                td #{dman.dm_id}
                                td #{dman.dm_firstname}
                                td #{dman.dm_lastname}
                                td(class="actions")  
                                    a(href=`/livreurs/edit/${dman.dm_id}`)
                                        button(type="submit" class="modify") Editer
                                    form(action=`/livreurs/delete/${dman.dm_id}` method='POST' id="formdelete")
