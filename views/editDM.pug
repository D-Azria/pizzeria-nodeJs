doctype html 
html
    head
        title Administration de la pizzeria "Tomato"
        link(rel="stylesheet", href="/public/sass/css/edit.css")
        link(rel="stylesheet", href="/public/sass/css/index.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300&display=swap" rel="stylesheet")
    body 
        header 
            a(href="/admin-app/")
                img(src="/public/images/logo_pizzeria.jpeg")
            div 
                h1 Administration de la pizzeria "Pizza Master"
                ul 
                    include header-menu.pug 
                                    
        main
            section 
                article 
                    h2 Modifier le livreur : #{dm.firstname} #{dm.lastname}
                    a(href="/livreurs") Retour à la liste des livreurs
                    div(id="edit")
                        form(action="/editDM" method='POST' id="formedit")
                            div
                                input(type="hidden" name="code" id="code" value=`${dm.id}`)
                                label(for="firstname") Prénom :
                                input(type="text" name="firstname" id="firstname" value=`${dm.firstname}`)
                            div
                                label(for="lastname") Nom de famille : 
                                input(type="text" name="lastname" id="lastname" value=`${dm.lastname}`)
                            div    
                                button(type="submit" name="edit" id="buttonedit") Modifier le livreur
